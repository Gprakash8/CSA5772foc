#include <stdio.h>

int main() {
    int n, sum = 0, number;
    float average;
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        printf("Enter number %d: ", i);
        scanf("%d", &number);
        sum += number;
    }

    average = (float) sum / n;
    printf("Sum = %d\n", sum);
    printf("Average = %.2f", average);

    return 0;
}
